<h3>Departamentos</h3>

<MatButton OnClick="@(e => { dialogIsOpen = true; })">Crear</MatButton>

<table class="table">
    <thead>
        <tr>
            <td>
                DepartamentoiD
            </td>
            <td>
                Nombre
            </td>
            
            <td>Editar</td>
            <td>Eliminar</td>
            
        </tr>
    </thead>
    <tbody>

        @foreach (var departamento in departamentos ??  new List<DepartamentoDto>())
